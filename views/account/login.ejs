<h1><%- title %></h1>
<%- messages() %>

    <div id="form-container">
        <form>
            <label for="account_email">Account Email</label>
            <input type="email" name="account_email" id="account_email" required>
            <label for="account_password">Account Password</label>
            <input type="password" name="account_password" id="account_password" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <div><i>Make sure the password is at least 12 characters, has at least 1 uppercase character, 1 number and 1
                    special character.</i></div>
            <input type="submit" value="Login">
        </form><br>
        <p>No account? <span><a href="/account/register">Sign-up</a></span></p>
    </div>