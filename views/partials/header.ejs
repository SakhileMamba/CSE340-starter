        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if(locals.loggedin) {%>
            <a title="Click to navigate to account" href="/account/">Welcome <%
                    if(locals.accountData.account_firstname/*==="Employee" || locals.accountData.account_type==="Admin"
                    */) { %>
                    <%= locals.accountData.account_firstname %>
